@inherits HomeBallsLoadingComponentBase
@inject IJSRuntime JSRuntime

<img src="@IconUrl" class="w-10 h-10 lg:w-15 lg:h-15 animate-spin-partial" id="app-icon-loading" />

@code
{
    protected virtual String? IconUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        IconUrl = await JSRuntime.InvokeAsync<String>(
            "getIconUrl",
            new Object?[] { default, default });
    }
}