@inherits HomeBallsTabComponentBase

@if (Tabs.IsAnySelected)
{
    <div class="flex w-7 h-7 ml-1 -mb-px lg:w-9 lg:h-9 lg:ml-2">
        <button onclick="@OnCloseClicked" class="m-auto w-6 h-6 rounded-md text-theme-black-400 hover:bg-theme-primary-100 hover:text-theme-black-500 active:bg-theme-primary-100 active:text-theme-black-500 lg:w-7 lg:h-7 lg:rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-[14px] h-[14px] mx-auto lg:w-[18px] lg:h-[18px]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
}

@code
{
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        Tabs.SelectionChanged += OnSelectionChanged;
    }

    protected virtual void OnSelectionChanged(
        Object? sender,
        ValueChangedEventArgs<Boolean> e) =>
        StateHasChanged();

    protected virtual void OnCloseClicked(MouseEventArgs e) => Tabs.DeselectAll();
}