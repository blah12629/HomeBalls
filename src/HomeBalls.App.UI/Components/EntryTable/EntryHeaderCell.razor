@inject IHomeBallsDataSource DataSource
@inject ISpriteService SpriteService

@if (IsBallShown)
{
    <th class="w-8 pt-0.75 border-b border-opacity-50 border-dream-purple">
        <BallSprite Ball="@Ball" />
    </th>
}

@code {
    [Parameter, EditorRequired]
    public UInt16 BallId { get; init; }

    IHomeBallsItem Ball => DataSource.Items[BallId];

    Boolean IsBallShown => Ball.CategoryId == 39 || Ball.Id == 5 || Ball.Id > 456;

    String SpriteUrl => SpriteService.GetSpriteUri(Ball).ToString();
}