@page "/"
@inject IHomeBallsEntryTableFactory TableFactory

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

@if (Table != default)
{
    <span>Table loaded successfully</span>
    @foreach (var column in Table.Columns)
    {
        <span>@column.SpeciesId</span>
        <span>@column.FormId</span>
        <br />
    }
}

<div class="bg-gray-50">
    <div class="mx-auto py-12 px-4">
        <div class="mt-8 flex">
            <button class="bg-gray-500 hover:bg-purple-600 p-4 shadow-md rounded-md text-white m-10">
                Download
            </button>
            <button class="bg-gray-500 hover:bg-red-600 p-4 shadow-md rounded-md text-white m-10">
                Visit
            </button>
        </div>
    </div>
</div>

@code {
    IHomeBallsEntryTable? _table;
    IHomeBallsEntryTable? Table
    {
        get => _table;
        set { _table = value; StateHasChanged(); }
    }

    protected override async Task OnInitializedAsync()
    {
        Table = await TableFactory.CreateTableAsync(new HomeBallsEntryCollection());
    }
}